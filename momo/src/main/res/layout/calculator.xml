<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/display"
        android:layout_weight="0.06"
        android:textSize="@dimen/home_money_text_size"
        android:gravity="center_vertical|right" android:paddingRight="16dp" android:background="@color/green_light"
        android:textColor="@color/white"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="7"
                android:id="@+id/seven"
                android:layout_weight="1" android:background="@color/white"/>

            <ImageView
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageView" android:background="@color/green_light"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="8"
                android:id="@+id/eight"
                android:layout_weight="1" android:background="@color/white" />

            <ImageView android:layout_width="1dp" android:layout_height="fill_parent" android:id="@+id/imageView2" android:background="@color/green_light"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="9"
                android:id="@+id/nine"
                android:layout_weight="1" android:background="@color/white" />
        </TableRow>

        <ImageView android:layout_width="fill_parent" android:layout_height="2dp" android:id="@+id/imageView3" android:background="@color/green_light"/>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/tableRow">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/four"
                android:layout_weight="1" android:background="@color/white" />

            <ImageView android:layout_width="1dp" android:layout_height="fill_parent" android:id="@+id/imageView6" android:background="@color/green_light"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/five"
                android:layout_weight="1" android:background="@color/white" />

            <ImageView android:layout_width="1dp" android:layout_height="fill_parent" android:id="@+id/imageView7" android:background="@color/green_light"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/six"
                android:layout_weight="1" android:background="@color/white" />
        </TableRow>

        <ImageView android:layout_width="fill_parent" android:layout_height="2dp" android:id="@+id/imageView4" android:background="@color/green_light"/>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/tableRow2">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/one"
                android:layout_weight="1" android:background="@color/white" />

            <ImageView android:layout_width="2dp" android:layout_height="fill_parent" android:id="@+id/imageView8" android:background="@color/green_light"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/two"
                android:layout_weight="1" android:background="@color/white" />

            <ImageView android:layout_width="2dp" android:layout_height="fill_parent" android:id="@+id/imageView9" android:background="@color/green_light"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/three"
                android:layout_weight="1" android:background="@color/white" />
        </TableRow>

        <ImageView android:layout_width="fill_parent" android:layout_height="2dp" android:id="@+id/imageView5" android:background="@color/green_light"/>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/tableRow3">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/zero"
                android:layout_weight="1" android:background="@color/white" />

            <ImageView android:layout_width="2dp" android:layout_height="fill_parent" android:id="@+id/imageView10" android:background="@color/green_light"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="C"
                android:id="@+id/bspace"
                android:layout_weight="1" android:background="@color/white" />

        </TableRow>
        <ImageView android:layout_width="fill_parent" android:layout_height="2dp" android:id="@+id/imageView11"
                   android:background="@color/green_light"/>
    </TableLayout>
</LinearLayout>
