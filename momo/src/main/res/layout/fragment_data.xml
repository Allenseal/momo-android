<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.cs.app.momo.MainActivity$DataFragment" android:background="@color/gray_light"
        android:orientation="vertical">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <FrameLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:background="@color/gray" android:padding="0dp">
            <Button
                    android:id="@+id/detail_date"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Date"
                    style="@style/SpinnerButtonStyle" android:paddingBottom="3dp" android:paddingTop="0dp"
                    android:gravity="center" android:textColor="@color/main_bg"/>
            <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="bottom" android:background="@color/main_bg"/>

        </FrameLayout>
        <ListView android:id="@+id/data_list"
                  android:layout_width="match_parent"
                  android:layout_height="0dip"
                  android:layout_weight="1"
                  android:divider="@android:color/transparent"
                  android:dividerHeight="0dp"
                  android:fadingEdge="none"
                  android:drawSelectorOnTop="false"
                  android:paddingTop="0dp" android:background="@color/white"/>
    </LinearLayout>
    <ImageView
            android:layout_width="@dimen/null_back"
            android:layout_height="@dimen/null_back"
            android:id="@+id/null_view" android:layout_gravity="center" android:src="@drawable/icon_back"
            />

</FrameLayout>
