<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/background_window</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="circularProgressBarStyle">@style/CircularProgressBar</item>

    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:icon">@drawable/ic_launcher_actionbar</item>
        <item name="android:background">#FF666666</item>
    </style>

    <style name="SpinnerButtonStyle" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="SpinnerButtonStyle2" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="myDialogStyle" parent="@android:style/Theme.Light.NoTitleBar">
    </style>
    <style name="FullHeightDialog"
           parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>